<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.tyl.timer">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".util.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/applogo"
        android:label="@string/app_name" android:supportsRtl="true" android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity" android:launchMode="singleTask" android:theme="@style/DayActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.ShowInformationActivity"/>
        <!-- <activity --> <!-- android:name=".activity.informationHint" -->
        <!-- android:theme="@style/translucent"/> -->
        <activity android:name=".activity.DayEditorActivity" android:theme="@style/translucent"/>
        <activity android:name=".activity.InformationEditorActivity" android:theme="@style/translucent"/>
        <!-- <activity --> <!-- android:name=".activity.SelectActivity" --> <!-- android:theme="@style/translucent"/> -->
        <receiver android:name=".BroadcastReceiver.MyReceiver" android:enabled="true" android:exported="true">
            <intent-filter> <action android:name="com.example.timer.FUCK_UP"/>
            </intent-filter> <intent-filter>
            <action android:name="android.intent.action.BOOT_COMPLETED"/>
        </intent-filter>
        </receiver>
        <service android:name=".service.MyService" android:enabled="true" android:exported="true">
        </service>
        <activity android:name=".activity.SearchActivity" android:launchMode="singleTask" android:theme="@style/translucent">
        </activity>
        <activity android:name=".activity.AppExplainActivity" android:launchMode="singleTask">
        </activity>
        <activity android:name=".activity.ShowInformationWorkingActivity" >
        </activity>
        <activity android:name=".activity.ShowInformationSelectActivity" >
        </activity>
        <activity android:name=".activity.ShowSearchActivity">
        </activity>
        <activity android:name=".activity.ShowStatisticsActivity">
        </activity>
        <activity android:name=".activity.BirthdayActivity">
        </activity>
    </application>

</manifest>